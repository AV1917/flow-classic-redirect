{
  "manifest_version": 3,
  "name": "Power Automate Classic Redirect",
  "version": "1.0",
  "description": "Enforces 'v3=false' on flow URLs.",
  "host_permissions": [
    "*://make.powerautomate.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}