{
  "manifest_version": 3,
  "name": "Flow Classic Redirect",
  "version": "2.0",
  "description": "Enforces 'v3=false' on Power Automate flow URLs.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://make.powerautomate.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16_disabled.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}