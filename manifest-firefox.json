{
  "manifest_version": 3,
  "name": "Flow Classic Redirect",
  "version": "2.0.4",
  "description":  "Force Microsoft Power Automate flows to open in the Classic Designer.",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "*://make.powerautomate.com/*"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{b5e8dfe0-84e2-4f3b-84db-45e9e4615da1}",
      "strict_min_version": "109.0"
    }
  },
  "background": {
    "scripts": [
      "browser-polyfill.min.js",
      "background.js"
    ]
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16_disabled.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}